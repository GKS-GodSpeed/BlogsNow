<h1>Listing All Articles</h1>

<p>
  <%= link_to 'Create New Article', new_article_path, method: "get" %>
</p>

<table>
  <tr>
    <th>TITLE</th>
    <th>DESCRIPTION</th>
  </tr>

  <% @articles.each do |a| %>
  <tr>
    <td><%= a.title %></td>
    <td><%= a.description %></td>
    <td><%= link_to 'Edit', edit_article_path(a), method: "get" %></td>
    <td><%= link_to 'Show', article_path(a), method: "get" %></td>
    <td><%= link_to 'Delete', article_path(a), method: :delete, data: {confirm: "Are you Sure?"} %></td>
  </tr>
  <% end %>
</table>